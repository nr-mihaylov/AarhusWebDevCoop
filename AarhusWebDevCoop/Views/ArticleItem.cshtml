@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticleItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<article class="article">
				<header class="article-header">
					<h1>@CurrentPage.headline</h1>
					<p><strong>Date:</strong> @CurrentPage.CreateDate</p>
					<p><strong>Author:</strong> @CurrentPage.author</p>
				</header>
				<p>@CurrentPage.content</p>
				<a class="btn btn-default" href="@CurrentPage.Up().Url">Back to article list</a>
			</article>
		</div>
	</div>
</div>